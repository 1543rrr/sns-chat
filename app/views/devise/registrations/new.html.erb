<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>
        <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user',local: true do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :name, "ユーザー名" %><br />
          <%= f.text_field :name %>
        </div>

        <div class="field">
        <%= f.label :gender, "性別" %><br />
          <%# <%= f.collection_select(:gender_id, Category.all, :id, :name, {}, {class:"category-select"}) %>
          <%= f.text_area :gender, class: :form__text %>
        </div>

        <div class="field">
          <%= f.label :undergraduate, "学部" %><br />
          <%# <%= f.collection_select(:undergraduate_id, Category.all, :id, :name, {}, {class:"category-select"}) %>
          <%= f.text_area :undergraduate, class: :form__text %>
        </div>

        <div class="field">
          <%= f.label :department, "学科" %><br />
          <%# <%= f.collection_select(:department_id, Category.all, :id, :name, {}, {class:"category-select"}) %>
          <%= f.text_area :department, class: :form__text %>
        </div>

        <div class="field">
          <%= f.label :course, "コース" %><br />
          <%# <%= f.collection_select(:course_id, Category.all, :id, :name, {}, {class:"category-select"}) %>
          <%= f.text_area :course_id, class: :form__text %>
        </div>

        <div class="field">
          <%= f.label :musical_instrument, "楽器" %><br />
          <%# <%= f.collection_select(:musical_instrument_id, Category.all, :id, :name, {}, {class:"category-select"}) %>
          <%= f.text_area :musical_instrument, class: :form__text %>
        </div>

        <div class="field">
          <%= f.label :recruitment, "募集内容" %><br />
          <%# <%= f.collection_select(:recruitment_id, Category.all, :id, :name, {}, {class:"category-select"}) %>
          <%= f.text_area :recruitment, class: :form__text %>
        </div>

        <div class="field">
          <%= f.label :self_introduction, "自己紹介" %><br />
          <%# <%= f.text_area :self_introduction, class: :form__text %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>